@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="Admin" asp-controller="Slider" asp-action="Create">Create a new category</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Article
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/images/website-images/@slider.Image" alt="">
                        </td>
                        <td>
                            @slider.Title
                        </td>
                        <td>
                            @slider.Description
                        </td>
                        <td  class="d-flex">
                                <div>
                                    <a asp-area="Admin" asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                                </div>
                                <div>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id"><i class="mdi mdi-delete"></i></a>
                                </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

