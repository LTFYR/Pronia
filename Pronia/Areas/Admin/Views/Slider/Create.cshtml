@model Slider
@{
    ViewData["Title"] = "CreateSlider";
}

<div class="main-panel">
    <h2 style="font-size:20px" class="text-center btn btn-secondary">Create a new slider</h2>
    <form class="mt-3" method="post" enctype="multipart/form-data">
    <div>
        <label>Add an image:</label><br/>
        <input asp-for="Photo"  class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>       
    </div>
    <div>
        <label>Add a title:</label><br/>
        <input asp-for="Title"  class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>       
    </div>
    <div>
        <label>Add a desc:</label><br/>
        <input asp-for="Description"  class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Description"></span>       
    </div>
    <div>
        <label>Add price:</label><br/>
        <input asp-for="Price"  class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Price"></span>       
    </div>
    <div>
        <label>Add url:</label><br/>
        <input asp-for="Url"  class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Url"></span>       
    </div>
    <div>
        <label>Add order:</label><br/>
        <input asp-for="Order"  class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Order"></span>       
    </div>
    
    <div class="mt-2">
        <button style="color:red" class="btn btn-primary" type="submit">Create</button>
    </div>
</form>
</div>
