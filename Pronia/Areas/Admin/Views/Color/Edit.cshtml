@model Color
@{
    ViewData["Title"] = "CreateCategory";
}


<div class="main-panel">
    <h2 style="font-size:20px" class="text-center btn btn-secondary">Create a new color</h2>
    <form class="mt-3" method="post">
    <div>
        <label>Add a category:</label><br/>
        <input asp-for="Name" class="form-control"/><br/>
        <span class="text-danger" asp-validation-for="Name"></span>       
    </div>
    <div class="mt-2">
        <button style="color:white" class="btn btn-primary" type="submit">Create</button>
    </div>
</form>
</div>